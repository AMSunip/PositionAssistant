<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <com.amap.api.maps.MapView
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/amap"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   </com.amap.api.maps.MapView>
   
   <ImageButton 
    android:id="@+id/imgbtn_menu_map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|top"
    android:layout_marginRight="10dip"
    android:layout_marginTop="30dip"
    android:contentDescription="@null"
    android:background="@drawable/style_menu_map"/> 
    
   <ImageButton 
    android:id="@+id/imgbtn_center_locked"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|bottom"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="230dip"
    android:contentDescription="@null"
    android:background="@drawable/center_unlocked"/> 
    
   <ImageButton 
    android:id="@+id/imgbtn_screenshot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|bottom"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="170dip"
    android:contentDescription="@null"
    android:background="@drawable/style_screenshot"/> 
    
   <ImageButton 
    android:id="@+id/imgbtn_maptype"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|bottom"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="110dip"
    android:contentDescription="@null"
    android:background="@drawable/style_map"/>   
   
   <ImageButton 
    android:id="@+id/imgbtn_pos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|bottom"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="50dip"
    android:contentDescription="@null"
    android:background="@drawable/style_pos"/>
    

</FrameLayout>
